    "@opentelemetry/sdk-node": "^0.211.0",
    "@sveltejs/kit": "^2.50.2",
    "better-svelte-email": "^1.4.0",
    "bits-ui": "^2.15.5",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "decode-formdata": "^0.9.0",
    "drizzle-orm": "^0.45.1",
    "http-parser-js": "^0.5.10",
    "http-raw-request": "^2.0.2",
    "inngest": "^3.52.0",
    "itertools": "^2.5.0",
    "jose": "^6.1.3",
    "mimetext": "^3.0.28",
    "mode-watcher": "^1.1.0",
    "multipart-ts": "^1.4.1",
    "papaparse": "^5.5.3",
    "pg": "^8.18.0",
    "svelte": "^5.50.1",
    "svelte-sonner": "^1.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "valibot": "^1.2.0"
