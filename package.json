{
  "name": "drap",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.30.0+sha512.2b5753de015d480eeb88f5b5b61e0051f05b4301808a82ec8b840c9d2adf7748eb352c83f5c1593ca703ff1017295bc3fdd3119abb9686efc96b9fcb18200937",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync",
    "fmt": "prettier . --experimental-cli --check --cache-location .prettiercache",
    "fmt:fix": "prettier . --experimental-cli --write --cache-location .prettiercache",
    "lint": "pnpm run --workspace-root --parallel /^lint:/",
    "lint:svelte": "svelte-check",
    "lint:eslint": "eslint --cache --concurrency auto",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "docker:dev": "docker compose --file compose.yaml --file compose.dev.yaml up --detach --wait",
    "docker:ci": "docker compose --file compose.yaml --file compose.ci.yaml up --detach --wait",
    "docker:prod": "docker compose --file compose.yaml --file compose.ci.yaml --file compose.prod.yaml up --detach --wait",
    "docker:app": "docker compose --file compose.yaml --file compose.ci.yaml --file compose.prod.yaml --file compose.app.yaml up --detach --wait",
    "docker:down": "docker compose down --remove-orphans",
    "install:playwright": "playwright install chromium",
    "test:playwright": "playwright test",
    "ui": "shadcn-svelte add --yes"
  },
  "dependencies": {
    "@internationalized/date": "^3.11.0",
    "@lucide/svelte": "^0.562.0",
    "@opentelemetry/instrumentation-http": "^0.211.0",
